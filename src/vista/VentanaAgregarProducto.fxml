<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlador.VentanaAgregarProductoController">
   <bottom>
      <HBox alignment="CENTER" prefHeight="38.0" prefWidth="600.0" spacing="50.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="aceptarPedido" mnemonicParsing="false" onAction="#aceptarPedidoBoton" text="Aceptar" textFill="#126f08">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <Button fx:id="cancelarPedido" mnemonicParsing="false" onAction="#cancelarPedidoBoton" text="Cancelar" textFill="RED">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </bottom>
   <center>
      <TableView fx:id="tablaDeProductos" editable="true" onMouseClicked="#obtenerProducto" prefHeight="562.0" prefWidth="450.0" BorderPane.alignment="CENTER">
        <columns>
            <TableColumn fx:id="columnaCantidadProducto" editable="false" prefWidth="60.0" resizable="false" sortable="false" text="Cantidad" />
            <TableColumn fx:id="columnaTipoProducto" editable="false" prefWidth="131.0" resizable="false" sortable="false" text="Tipo" />
          <TableColumn fx:id="columnaNombreProducto" editable="false" minWidth="0.0" prefWidth="216.0" resizable="false" sortable="false" text="Nombre" />
          <TableColumn fx:id="columnaPrecioProducto" editable="false" minWidth="0.0" prefWidth="93.0" resizable="false" sortable="false" text="Precio" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <right>
      <VBox fx:id="productosElegidos" alignment="TOP_CENTER" prefHeight="505.0" prefWidth="299.0" style="-fx-background-color: grey;" BorderPane.alignment="CENTER" />
   </right>
   <top>
      <HBox alignment="CENTER" prefHeight="57.0" prefWidth="800.0" spacing="50.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
               <children>
                  <CheckBox fx:id="pTodos" mnemonicParsing="false" onAction="#todosElegidos" text="Todos">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </CheckBox>
                  <CheckBox fx:id="pOtros" mnemonicParsing="false" onAction="#otrosElegidos" text="Otros">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </CheckBox>
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
               <children>
                  <CheckBox fx:id="pEntrada" mnemonicParsing="false" onAction="#entradaElegidos" text="Entrada">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </CheckBox>
                  <CheckBox fx:id="pSopa" mnemonicParsing="false" onAction="#sopaElegidos" text="Sopa">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </CheckBox>
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="117.0" spacing="5.0">
               <children>
                  <CheckBox fx:id="pPescado" mnemonicParsing="false" onAction="#pescadoElegidos" text="Con Pescado">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </CheckBox>
                  <CheckBox fx:id="pRes" mnemonicParsing="false" onAction="#resElegidos" text="Con Res">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </CheckBox>
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="135.0" spacing="5.0">
               <children>
                  <CheckBox fx:id="pPollo" mnemonicParsing="false" onAction="#polloElegidos" text="Con Pollo">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </CheckBox>
                  <CheckBox fx:id="pCerdo" mnemonicParsing="false" onAction="#cerdoElegidos" text="Con Cerdo">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </CheckBox>
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="140.0" spacing="5.0">
               <children>
                  <CheckBox fx:id="pAlcohol" mnemonicParsing="false" onAction="#alcoholElegidos" text="B. con Alcohol">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </CheckBox>
                  <CheckBox fx:id="pSinAlcohol" mnemonicParsing="false" onAction="#sinAlcoholElegidos" text="B. sin Alcohol">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </CheckBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </top>
</BorderPane>
